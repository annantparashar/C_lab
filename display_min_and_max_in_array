#include <stdio.h>

int main() {
    int n;
  printf("enter size of array");
  scanf("%d",&n);
  int arr[n];
  printf("enter elements of array");
  for(int i=0;i<n;i++) {
    scanf("%d",&arr[i]);
  }
    int min = arr[0];
    int max = arr[0];

    for (int i = 1; i < n; i++) {
        if (arr[i] < min) {
            min = arr[i];
        }
        if (arr[i] > max) {
            max = arr[i];
        }
    }

    printf("Minimum value in array: %d\n", min);
    printf("Maximum value in array: %d\n", max);

    return 0;
}
